<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp">

    <TextView
        android:text="Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:fontFamily="serif"
        android:textSize="36sp"
        android:textAlignment="viewStart"
        android:textStyle="normal|bold"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ToggleButton
                android:id="@+id/flashlightButton"
                android:layout_marginBottom="20dp"
                android:onClick="onToggleClicked"
                android:text="@string/placed"
                android:textOn="@string/double_double2"
                android:textOff="@string/double_double" />
            <TextView
                android:text="2.95"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textAlignment="viewEnd"
                android:textSize="20dp"
                android:layout_marginLeft="180dp"
                android:textStyle="normal|bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ToggleButton
                android:layout_marginBottom="20dp"
                android:onClick="onToggleClicked"
                android:text="@string/placed"
                android:textOn="@string/cheese_burger"
                android:textOff="@string/cheese_burger" />

            <TextView
                android:text="1.95"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textSize="20dp"
                android:textStyle="normal|bold"
                android:layout_marginLeft="180dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <ToggleButton
                android:layout_marginBottom="20dp"
                android:onClick="onToggleClicked"
                android:text="@string/placed"
                android:textOn="@string/hamburgerOn"
                android:textOff="@string/hamburger" />

            <TextView
                android:text="1.65"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_marginLeft="180dp"
                android:textSize="20dp"
                android:textStyle="normal|bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <ToggleButton
                android:layout_marginBottom="20dp"
                android:onClick="onToggleClicked"
                android:text="@string/placed"
                android:textOn="@string/french_friesOn"
                android:textOff="@string/french_fries" />

            <TextView
                android:text="1.19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_marginLeft="180dp"
                android:textStyle="normal|bold"
                android:textSize="20dp" />

        </TableRow>
    </TableLayout>

    <TextView
        android:text="Drinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="36sp"
        android:fontFamily="serif"
        android:textStyle="normal|bold"
        android:layout_marginLeft="15dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ToggleButton
                android:layout_marginBottom="20dp"
                android:onClick="onToggleClicked"
                android:text="@string/placed"
                android:textOn="@string/small"
                android:textOff="@string/small" />

            <TextView
                android:text="1.15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_marginLeft="222dp"
                android:textSize="20dp"
                android:textStyle="normal|bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ToggleButton
                android:layout_marginBottom="20dp"
                android:onClick="onToggleClicked"
                android:text="@string/placed"
                android:textOn="@string/mediumOn"
                android:textOff="@string/medium" />

            <TextView
                android:text="1.25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:elevation="15dp"
                android:textSize="20dp"
                android:textStyle="normal|bold"
                android:layout_marginLeft="222dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ToggleButton
                android:layout_marginBottom="20dp"
                android:onClick="onToggleClicked"
                android:text="@string/placed"
                android:textOn="@string/largeOn"
                android:textOff="@string/large" />

            <TextView
                android:text="1.45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:textSize="20dp"
                android:textStyle="normal|bold"
                android:layout_marginLeft="222dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ToggleButton
                android:layout_marginBottom="20dp"
                android:onClick="onToggleClicked"
                android:text="@string/placed"
                android:textOn="@string/X_LG"
                android:textOff="@string/X_LG" />

            <TextView
                android:text="1.65"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:textStyle="normal|bold"
                android:textSize="20dp"
                android:layout_marginLeft="222dp" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="270dp">

            <Button
                android:text="@string/place_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_red_dark"
                android:id="@+id/etPlaceOrder"
                android:elevation="0dp"
                android:textSize="10sp" />

        </TableRow>
    </TableLayout>
</LinearLayout>